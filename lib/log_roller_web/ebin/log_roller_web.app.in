#!/bin/bash

VERSION=${1}
MODULES=`ls -1 src/*.erl | awk -F[/.] '{ print "\t\t" $2 }' | sed '$q;s/$/,/g'`

cat > ebin/log_roller_web.app << EOF
{application, log_roller_web, [
    {description, "log_roller_web"},
    {vsn, "${VERSION}"},
    {modules, [
${MODULES}
    ]},
    {registered, []},
    {mod, {log_roller_web, []}},
    {applications, [kernel, stdlib, mochiweb, log_roller_server]},
	{start_phases, [{world, []}, {pg2, []}]}
]}.
EOF